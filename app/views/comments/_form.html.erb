<%= form_for(comment, url:post_comments_path(post)) do |form| %>
  <div>
    <%= form.text_area :content, class: "form-control", placeholder: "Comment..." %>
    <%= hidden_field_tag :post_id, post.id %>
  </div>
  <div class="actions">
    <%= form.submit "Comment", class: "btn btn-success"%>
  </div>
<% end %>
